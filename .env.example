# PPUT Ostrans - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection string format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://dbuser:dbpass@db-host:5432/ostrans

# Alternative: Individual database parameters (if DATABASE_URL not set)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ostrans
# DB_USER=postgres
# DB_PASSWORD=yourpassword

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Secret key for JWT token signing - MUST be strong random string in production
# Generate with: openssl rand -base64 32
JWT_SECRET=replace_with_strong_random_secret

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Port for Node.js server (if using server.js instead of PHP)
PORT=3000

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Allowed origin for API requests (set to your frontend domain)
ALLOW_ORIGIN=https://ostrans.famisska.pl

# Main site URL (used for redirects)
MAIN_SITE=https://ostrans.famisska.pl

# ===========================================
# HTTPS CONFIGURATION
# ===========================================
# Force HTTPS redirect (set to false in development)
FORCE_HTTPS=true

# ===========================================
# DISCORD OAUTH2 CONFIGURATION
# ===========================================
# Get these values from: https://discord.com/developers/applications

# Your Discord Application Client ID
DISCORD_CLIENT_ID=1448272608108875988

# Your Discord Application Client Secret (keep this secret!)
DISCORD_CLIENT_SECRET=VZH_wK--pWDHBG_OIPdcAbNnAQwQxN0E

# OAuth2 Callback URL - must match the one configured in Discord Developer Portal
# Format: https://yourdomain.com/auth/discord/callback
DISCORD_REDIRECT_URI=https://ostrans.famisska.pl/auth/discord/callback

# ===========================================
# DISCORD SERVER (GUILD) CONFIGURATION
# ===========================================
# Optional: Required for role mapping from Discord server to application roles

